
public class OperatorsMath {

	
	public static void main(String[] args) {
		double num1 = 0.4d;
		double num2 = 0.3d;
		double result;
		char add = '+';
		char minus = "-"
		char multiplication = "*"	
		char division = "/"	
		result = num1 + num2;
		
		System.out.println(num1 + "" + add+ ""+ num2 +"= "+ result);
		System.out.println();
		System.out.println(num1 + "" + minus+ ""+ num2 +"= "+ result);
		System.out.println();
		System.out.println(num1 + "" + multiplication + ""+ num2 +"= "+ result);
		System.out.println();
		

	}

}

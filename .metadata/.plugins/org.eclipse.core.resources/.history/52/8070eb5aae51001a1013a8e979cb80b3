import java.util.Scanner;
public class ScannerNewName {
		
		public static void main (String []args){
	    Scanner skeneris = new Scanner(System.in);
	    System.out.println("Please write father's first name: "); 
	    String fatherName;
	    fatherName = skeneris.nextLine(); 

	    System.out.println("Please write mother's first name:");
	    String motherName;
	    motherName = skeneris.nextLine();
	    
	   System.out.println(fatherName + " and " + motherName);
	   
	   
	   
	   String substringFather = fatherName.substring(0, 3);
	   System.out.println(substringFather);
	   
	    
	   String substringMother = motherName.substring (motherName.length() -3);
	   System.out.println(substringMother );
	    

	  System.out.println("Your child' s name is: " +substringFather + substringMother);

	}
}